{
    "manifest_version": 3,
    "name": "Text Cleaner & Compressor",
    "version": "1.0",
    "description": "Use regular expressions to clean and compress large social media text data.",
    "permissions": [
      "activeTab",
      "storage",
      "contextMenus"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "host_permissions": [
      "*://*/*"
    ]
  }
  